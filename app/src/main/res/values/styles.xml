    <style name="my_dialog_theme"  parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/custom_design_icon</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">

        <item name="android:datePickerMode">spinner</item>
        <item name="android:background">@drawable/custom_background_dpd</item>

    </style>
    <style name="MaterialButtonIcon" parent="Widget.MaterialComponents.Button">
        <item name="iconGravity">end</item>
        <item name="android:background">@drawable/material_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="iconTint">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="icon">@drawable/material_button_icon</item>
    </style>
    <style name="MaterialButtonWithoutIcon" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/material_background</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="icon">@null</item>
    </style>

    <style name="customChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/color_chip</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="chipStrokeColor">#0f000000</item>
        <item name="closeIconTint">#FFFFFF</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ShapeableImageView Style -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:spinnerMode">dropdown</item>

    </style>
    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
